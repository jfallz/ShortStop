{
    "name": "ShortStop",
    "description": "You've been watching too many Shorts. Let me help you stop.",
    "manifest_version": 3,
    "version": "1.0",
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabs",
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    }
  }